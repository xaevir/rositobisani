doctype 5
html(lang="en")
  head
    script
      var user = !{user} 
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    if locals.title
      title #{title} - Rosito Bisani 
    else
      title Rosito Bisani 
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Serving the needs of the foodservice industry')
    link(rel='shortcut icon', href='/img/favicon.png')
    link(rel='stylesheet', href='/css/main.css')
    //- HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
      script(src='/js/libs/respond.js')
    //if lt IE 7
      script(src='/fonts/icons/lte-ie7.js')

    if locals.env === 'production' || locals.env === 'staging' 
      script(data-main='/js/main-built', src='/js/libs/require.js')
    else 
      script(data-main='/js/main', src='/js/libs/require.js')
  body
    #wrap
      #nav-region
        include nav
      #alert-region
      #dialog-region
      #app
        block content
      #push
    include footer
