<div class="container">
  <h1>{{name}}</h1>
  <div class="row">
    <div class="span6">
      <h2>Description</h2>
      <div class="description">{{{description}}}</div>
      <h2>Spec Sheets</h2>
      <ul class="thumbnails">
        {{#pdfs}}
        <li style="width: 187px">
          <p><b>{{caption}}</b></p>
            <a href="/product-pdfs/{{name}}" class="thumbnail" target='_blank'>
              <span class="thumbnail-wrapper">
                <img src="/product-pdfs/{{thumb}}" class="pdf"/>
              </span>
            </a>
        </li>
        {{/pdfs}}
      </ul>
    </div>          
    <div class="span6">
      {{#mainImage}}
        <img alt="{{name}}" src="/product-images/{{medium}}" class="main"/>
      {{/mainImage}} 
    </div>
  </div>
</div>
