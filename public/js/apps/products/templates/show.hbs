<div class="breadcrumbs">
  <div class="container">
    <div class"title">{{header}}</div>
  </div>
</div>

<div class="container">
  <h1>{{name}}</h1>
  <div class="row">
    {{!-- left Half which is 6 width and pushed right --}}
    <div class="col-md-6 col-md-push-6 img-wrapper">
      {{#mainImage}}
        <img alt="{{name}}" src="/product-images/{{medium}}"/>
      {{/mainImage}}
    </div>
    {{!-- right half which is pushed left --}}
    <div class="col-md-6 col-md-pull-6">
      <h2>Description</h2>
      <div class="description">{{{description}}}</div>
      {{#if noCols}}
        {{!-- specHeader --}}
        <hr /><h3>Spec Sheets</h3>
        {{!-- /specHeader --}}
        <div class="row pdfs">
          {{#each files}}
            <div class="col-sm-4">
              {{!-- specPartial --}}
              <a href="/product-pdfs/{{name}}" target="_blank">
                <span class="thumbnail">
                  <img src="/product-pdfs/{{thumb}}" class="pdf"/>
                </span>
                <p class="title">{{caption}}</p>
              </a>
              {{!-- /specPartial --}}
            </div>
          {{/each}}
        </div>
      {{/if}}
    </div>
  </div>
  {{#if has4Cols}}
    {{!-- start a new row --}}
    <div class="row" id="pizza-ovens">
      <div class="col-md-12">
        {{!-- specHeader --}}
        <hr /><h3>Spec Sheets</h3>
        {{!-- /specHeader --}}
        <div class="row pdfs">
          {{#each orignalFiles}}
            <div class="col-sm-3">
              <h3>{{columnHeader}}</h3>
              {{#each specs}}
                <div class="row" style="margin-bottom: 15px">
                  <div class="col-xs-12">
                    {{!-- specPartial --}}
                    <a href="/product-pdfs/{{name}}" target="_blank">
                      <span class="thumbnail">
                        <img src="/product-pdfs/{{thumb}}" class="pdf"/>
                      </span>
                      <p class="title">{{caption}}</p>
                    </a>
                    {{!-- /specPartial --}}
                  </div>
                </div>
              {{/each}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}
  {{#if has3Cols}}
    {{!-- start a new row --}}
    <div class="row" id="pizza-ovens">
      <div class="col-md-12">
        {{!-- specHeader --}}
        <hr /><h3>Spec Sheets</h3>
        {{!-- /specHeader --}}
        <div class="row pdfs">
          {{#each orignalFiles}}
            <div class="col-sm-4">
              <h3>{{columnHeader}}</h3>
              {{#each specs}}
                <div class="row" style="margin-bottom: 15px">
                  <div class="col-xs-12">
                    {{!-- specPartial --}}
                    <a href="/product-pdfs/{{name}}" target="_blank">
                      <span class="thumbnail">
                        <img src="/product-pdfs/{{thumb}}" class="pdf"/>
                      </span>
                      <p class="title">{{caption}}</p>
                    </a>
                    {{!-- /specPartial --}}
                  </div>
                </div>
              {{/each}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}
</div>
