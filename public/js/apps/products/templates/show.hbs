<div class="breadcrumbs">
  <div class="container">
    <div class"title">{{header}}</div>
  </div>
</div>
<div class="container">
  <h1>{{name}}</h1>
  <div class="row">
    <div class="col-md-6 col-md-push-6 img-wrapper">
      {{#mainImage}}
        <img alt="{{name}}" src="/product-images/{{medium}}"/>
      {{/mainImage}} 
    </div>
    <div class="col-md-6 col-md-pull-6">
      <h2>Description</h2>
      <div class="description">{{{description}}}</div>
      {{#if pdfs}}
      <h3>Spec Sheets</h3>
      {{/if}}
      <div class="row pdfs">
        {{#pdfs}}
        <div class="col-sm-4">
          <a href="/product-pdfs/{{name}}" target='_blank'>
            <span class="thumbnail">
              <img src="/product-pdfs/{{thumb}}" class="pdf"/>
            </span>
            <p class="caption">{{caption}}</p>
          </a>
        </div>
        {{/pdfs}}
      </div>
    </div>
  </div>
</div>
